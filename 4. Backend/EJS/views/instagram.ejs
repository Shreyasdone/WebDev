<%- include('includes/header.ejs') %>
<body>
    <h1>You are on the page of <%= data.name %></h1>
    <span>@<%= data.name %></span>
    <button class="btn btn-outline-info">Follow</button>
    <button class="btn btn-outline-light">Message</button>
    <p>Followers: <%= data.followers %> &nbsp;&nbsp;&nbsp;&nbsp; Following: <%= data.following %></p>
    <hr>
    <h2>Posts</h2>
    <% for(let post of data.posts) { %>
        <img src="<%=post.image%>" alt="post">
        <p>
          <i class="fa-solid fa-heart"></i> <%=post.likes%> Likes
          &nbsp;&nbsp;&nbsp;&nbsp;
          <i class="fa-solid fa-comments"></i> <%=post.comments %> Comment
        </p>
    <%}%>
    <%- include('includes/footer.ejs') %>
  </body>
  <script src="/app.js"></script>
</html>
